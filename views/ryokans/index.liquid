{% layout "layout.liquid" %} {% block content %}
<div>
  {% if login %}
  <div>
    <a href="/user/logout"><button>Logout</button></a>
    <a href="/user/myaccount"><button>My Account</button></a>
  </div>
  {% else %}
  <a href="/user/signup"><button>Signup</button></a>
  <a href="/user/login"><button>Login</button></a>
  {% endif %} {% for ryokan in ryokans %}
  <article>
    <div class="container">
      <a href="/ryokans/{{ ryokan._id }}">
        <h2>
          {{ ryokan.name }}
        </h2>
        <img src="{{ ryokan.img[0] }}" alt="" />
      </a>
    </div>
  </article>
  {% endfor %}
</div>
{% endblock %}
